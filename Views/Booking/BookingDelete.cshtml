@model BSTableBooking.Models.Booking

<h1>Product</h1>
<form method="post" asp-action="BookingDelete">
    <input type="hidden" asp-for="OrderID" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Delete Product</h1>
        </div>
        <div class="mb-2">
            <label>Booking Name</label>
            <input asp-for="OrderDescription" disabled class="form-control" />
        </div>
        <div class="mb3">
            
            <label>Order Date</label>
            <input asp-for="OrderDate" disabled class="form-control" />
        </div>
        <br />
        <div class="mb3">
            
            <label>Booking Status</label>
            <input asp-for="BookingStatus" disabled class="form-control" />
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Booking" asp-action="BookingList" class="btn btn-primary">Back To List</a>
    </div>
</form>


