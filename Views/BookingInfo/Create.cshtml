@model BookingInfo


<h1>Create Session</h1>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Create Product</h1>
        </div>
        <div class="mb-2">
           @* <div asp-validation-summary="All" class="text-danger"></div>*@
            <label>Name</label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>
        <div class="mb3">x
            <label >Description</label>
            <input asp-for="ProductDescription" class="form-control"/>
        </div>
        <br />
        <div class="mb3">

            <label>Session Start Date</label>
            <input asp-for="SessionStartTime" class="form-control" />
            <span asp-validation-for="SessionStartTime" class="text-danger"></span>

        </div>
        <br />

        <div class="mb3">

            <label>Available Seats</label>
            <input asp-for="Qty" class="form-control" />
            <span asp-validation-for="Qty" class="text-danger"></span>

        </div>
        <br />
        <div class="mb3">

            <label>Session End Date</label>
            <input asp-for="SessionEndTime" class="form-control" />
            <span asp-validation-for="SessionEndTime" class="text-danger"></span>

        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="BookingSession" class="form-label mt-4">Session Time</label>
                <select class="form-select" asp-for="BookingSession">
                    <option>Morning</option>
                    <option>Afternoon</option>
                    <option>Evening</option>
                </select>
                <span asp-validation-for="BookingSession" class="text-danger"></span>
            </div>
        </div>

        <div class="input-container">
            <label asp-for="Category" class="w-40">Table Area </label>
            <select asp-items="Model.CategoryList" class="input" asp-for="Categories" multiple>
                <option value="">--select--</option>
            </select>
        </div>
        <br />

        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="BookingInfo" asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>
